<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel label="Skins" border="true" name="Skins panel">
	<text
		type="string"
		length="1"
		follows="left|top"
		height="12"
		layout="topleft"
		left="30"
		name="SkinCurrentText"
		top="25"
		width="128">
			 Select a UI skin:
		</text>
		
		<combo_box
     control_name="Skin"
     follows="left|top"
     height="23"
     layout="topleft"
     left="35"
     max_chars="135"
     name="skin_selection"
     width="200">
        <combo_box.item
         enabled="true"
         label="Kirstens S20 default"
         name="default"
         value="default" />
			<combo_box.commit_callback
		 function="Pref.SelectSkin"/>
		</combo_box>

		<text
			type="string"
			length="1"
			follows="left|top"
			height="12"
			layout="topleft"
			left="35"
			name="skin_name_label"
			top_pad="5"
			width="76">Skin name:</text>
		<text
			type="string"
			length="1"
			follows="left|top"
			height="12"
			layout="topleft"
			left="110"
			name="skin_name"
			top_pad="-12"
			width="255">[None given]</text>

		<text
			type="string"
			length="1"
			follows="left|top"
			height="12"
			layout="topleft"
			left="35"
			name="skin_authors_label"
			top_pad="5"
			width="76">Authors:</text>
		<text
			type="string"
			length="3"
			follows="left|top"
			height="36"
			layout="topleft"
			left="110"
			name="skin_authors"
			top_pad="-12"
			width="255">[None given]</text>
		<text
			type="string"
			length="1"
			follows="left|top"
			height="12"
			layout="topleft"
			left="35"
			name="skin_description_label"
			top_pad="5"
			width="255">Description:</text>
		<text
			type="string"
			length="3"
			follows="left|top"
			height="36"
			layout="topleft"
			left="110"
			name="skin_description"
			top_pad="-12"
			width="255">[None given]</text>
		<icon
			follows="left|top"
			image_name="skinpreview_dummy.png"
			layout="topleft"
			name="skin_preview_icon"
			mouse_opaque="false"
			visible="true"
			width="298"
			height="130"
			left="30"
			top_pad="20"/>

</panel>
